<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/dialog_end_banner"
        android:src="@drawable/banner"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/dialog_end_of_quiz" />

    <TextView
        style="@style/AppTheme.DialogHeading"
        android:id="@+id/myImageViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/dialog_end_banner"
        android:layout_alignTop="@id/dialog_end_banner"
        android:layout_alignRight="@id/dialog_end_banner"
        android:layout_alignBottom="@id/dialog_end_banner"
        android:layout_alignStart="@id/dialog_end_banner"
        android:layout_alignEnd="@id/dialog_end_banner"
        android:layout_margin="2dp"
        android:gravity="center"
        android:text="@string/dialog_end_of_quiz" />

    <TextView
        android:id="@+id/dialog_end_message"
        style="@style/AppTheme.DialogText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_end_banner"
        android:layout_margin="10dp"
        android:text="This is an evaluation" />

    <TextView
        android:id="@+id/dialog_end_score"
        style="@style/AppTheme.DialogText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_end_message"
        android:layout_margin="10dp"
        android:text="Your score was." />


</RelativeLayout>